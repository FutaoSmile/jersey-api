    <!--注册servlet-->
    <servlet>
        <servlet-name>some-servlet</servlet-name>
        <servlet-class>impl.com.bjpn.servlet.SomeServlet</servlet-class>
        <!--程序启动的时候就创建这个实例，顺序从小到大，从0开始-->
        <load-on-startup>0</load-on-startup>
        <!--初始化，调用init方法的时候-->
        <init-param>
            <param-name>author</param-name>
            <param-value>futao</param-value>
        </init-param>
        <init-param>
            <param-name>address</param-name>
            <param-value>Shanghai</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>some-servlet</servlet-name>
        <url-pattern>/some</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>servlet-urlparameter</servlet-name>
        <servlet-class>impl.com.bjpn.servlet.UrlParameterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servlet-urlparameter</servlet-name>
        <!--一个servlet可以有多个url与之相关联-->
        <url-pattern>/url</url-pattern>
        <url-pattern>/url/a</url-pattern>
        <url-pattern>/url/b</url-pattern>
        <!--通配符-->
        <url-pattern>/url/a/*</url-pattern>
        <!-- /*  与 /  的区别
            都是全路径模式
            /* 是真正的全路径模式，可以拦截所有的请求，无论是动态请求还是静态资源请求
            / 只会拦截静态资源请求，对于动态资源请求是不拦截的
        -->
        <url-pattern>/url/a/</url-pattern>
        <!--拦截以.do 结尾的请求 -->
        <url-pattern>*.do</url-pattern>
        <!--匹配原则：
            1.路径优先于后缀名
            2.精准路径优先匹配原则
            3.最长路径优先匹配原则
           两种方式不可混合使用 eg /a.do

        -->
    </servlet-mapping>

    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>impl.com.bjpn.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
